<%= simple_form_for(@poster) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
  <%= f.input :image, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
